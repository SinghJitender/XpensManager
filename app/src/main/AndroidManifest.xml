<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.jitender.xpensmanager">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/xpensmanagericon"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@drawable/xpensmanagericon"
        android:supportsRtl="true"
        android:theme="@style/Theme.XpensManager"
        tools:replace="android:icon">
        <activity android:name="com.jitender.xpensmanager.SetupScreen.Setup"></activity>
        <activity android:name="com.jitender.xpensmanager.SettingScreen.Settings"></activity>
        <activity android:name="com.jitender.xpensmanager.ExpenseScreen.Expense" />
        <activity
            android:name="com.jitender.xpensmanager.MainScreen.MainActivity"
            android:windowSoftInputMode="adjustPan"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_main"></activity>
        <activity
            android:name="com.jitender.xpensmanager.SplashScreen.SplashScreenActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_splash_screen"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name="com.jitender.xpensmanager.BackupAndRestoreUtils.BackupService"
            android:exported="true" />
        <service android:name="com.jitender.xpensmanager.BackupAndRestoreUtils.ExportToExcelService" />
        <service android:name="com.jitender.xpensmanager.BackupAndRestoreUtils.RestoreService" />

        <receiver
            android:name="com.jitender.xpensmanager.BackupAndRestoreUtils.AutomaticBackup"
            android:enabled="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="com.example.xpensmanager.START_ALARM" />
            </intent-filter>
        </receiver>
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths" />
        </provider>
    </application>

</manifest>