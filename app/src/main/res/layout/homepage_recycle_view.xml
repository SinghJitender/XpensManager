<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/parentCardView"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/infoCardView"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/white">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:padding="10dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/expenseTitle"
                        android:text="Bangalore Flat Mates"
                        android:gravity="left"
                        android:layout_width="match_parent"
                        android:textSize="22sp"
                        android:textColor="@color/theme_text_color_on_white_bg"
                        android:layout_height="wrap_content"/>
                    <View
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:background="@color/theme_blue"
                        />
                    <TextView
                        android:id="@+id/monthTotalTitle"
                        android:text="Current Month's Total"
                        android:gravity="left"
                        android:layout_width="match_parent"
                        android:textSize="10sp"
                        android:textColor="@color/theme_text_color_on_white_bg"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/totalSpendsThisMonth"
                            android:layout_width="wrap_content"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:gravity="left"
                            android:text="â‚¹ 12456.00"
                            android:textColor="@color/theme_text_color_on_white_bg"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/netSpendsThisMonth"
                            android:layout_width="wrap_content"
                            android:paddingTop="3dp"
                            android:paddingLeft="5dp"
                            android:textSize="13sp"
                            android:layout_gravity="start|left"
                            android:gravity=""
                            android:text="+6456.00"
                            android:textColor="@color/theme_red"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/lifeTimeSpendTitle"
                        android:text="Lifetime Group Total"
                        android:gravity="left"
                        android:layout_width="match_parent"
                        android:textSize="8sp"
                        android:textColor="@color/theme_text_color_on_white_bg"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/lifeTimeSpend"
                        android:text="Lifetime - 189078.00"
                        android:gravity="left"
                        android:layout_width="match_parent"
                        android:textSize="14sp"
                        android:textColor="@color/theme_text_color_on_white_bg"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:padding="3dp"
                            android:id="@+id/splitIcon"
                            android:layout_width="20dp"
                            android:src="@drawable/group_black"
                            android:scaleType="fitCenter"
                            android:textColor="@color/theme_text_color_on_white_bg"
                            android:layout_height="20dp"/>
                        <TextView
                            android:id="@+id/splitBetween"
                            android:layout_width="wrap_content"
                            android:paddingLeft="5dp"
                            android:textSize="12sp"
                            android:layout_gravity="center"
                            android:gravity=""
                            android:text="3 Persons"
                            android:textColor="@color/theme_text_color_on_white_bg"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/limitUsed"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="6"
                            android:text="12022/234442"
                            android:layout_gravity="right"
                            android:textSize="12sp"
                            android:gravity="right|bottom"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="20"
                        android:orientation="horizontal">
                            <ProgressBar
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="0dp"
                                android:layout_weight="20"
                                android:layout_height="match_parent"
                                android:id="@+id/progress"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:max="100"
                                android:progressTint="@color/theme_red"
                                android:progress="45"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:padding="3dp"
                            android:id="@+id/warningIcon"
                            android:layout_width="20dp"
                            android:src="@drawable/warning"
                            android:scaleType="fitCenter"
                            android:textColor="@color/theme_text_color_on_white_bg"
                            android:layout_height="20dp"/>
                        <TextView
                            android:id="@+id/warning"
                            android:layout_width="wrap_content"
                            android:paddingLeft="5dp"
                            android:textSize="12sp"
                            android:layout_gravity="center"
                            android:gravity=""
                            android:text="70% limit used. Remaining amount - 89044.98"
                            android:textColor="@color/theme_text_color_on_white_bg"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:visibility="gone"
            android:background="@color/theme_blue"
            app:layout_constraintTop_toBottomOf="@+id/infoCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="40">
            <LinearLayout
                android:orientation="horizontal"
                 android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_weight="30"
                android:weightSum="40">

                <ImageButton
                    android:id="@+id/viewXpens"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="10"
                    android:text="View"
                    android:padding="15dp"
                    android:src="@drawable/list"
                    android:scaleType="fitCenter"
                    android:background="@color/theme_blue"
                    android:layout_marginRight="20dp"/>

                <ImageButton
                    android:id="@+id/editXpens"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="10"
                    android:text="Edit"
                    android:padding="15dp"
                    android:src="@drawable/edit"
                    android:scaleType="fitCenter"
                    android:background="@color/theme_blue"
                    android:layout_marginRight="20dp"/>

                <ImageButton
                    android:id="@+id/settleXpens"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="10"
                    android:text="Settle"
                    android:src="@drawable/check"
                    android:padding="15dp"
                    android:scaleType="fitCenter"
                    android:background="@color/theme_blue"
                    android:layout_marginRight="20dp"/>

                <ImageButton
                    android:id="@+id/deleteXpens"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="10"
                    android:text="Delete"
                    android:padding="15dp"
                    android:src="@drawable/delete"
                    android:scaleType="fitCenter"
                    android:background="@color/theme_blue"
                    android:layout_marginRight="20dp"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:layout_marginBottom="5dp"
                android:paddingRight="15dp"
                android:layout_weight="10"
                android:weightSum="40">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:gravity="center|top"
                    android:textColor="@color/white"
                    android:layout_marginRight="20dp"
                    android:text="View"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:gravity="center|top"
                    android:textColor="@color/white"
                    android:layout_marginRight="20dp"
                    android:text="Update"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:gravity="center|top"
                    android:textColor="@color/white"
                    android:layout_marginRight="20dp"
                    android:text="Settle"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:gravity="center|top"
                    android:textColor="@color/white"
                    android:layout_marginRight="20dp"
                    android:text="Delete"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linerLayoutInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:background="@color/theme_red"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:orientation="horizontal">
                <ImageView
                    android:padding="3dp"
                    android:id="@+id/infoIcon"
                    android:layout_width="20dp"
                    android:src="@drawable/info_white"
                    android:scaleType="fitCenter"
                     android:layout_height="20dp"/>
                <TextView
                    android:id="@+id/info"
                    android:layout_width="wrap_content"
                    android:paddingLeft="5dp"
                    android:textSize="12sp"
                    android:layout_gravity="center"
                    android:gravity=""
                    android:text="You own 6456.00 to Sukhmani"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>