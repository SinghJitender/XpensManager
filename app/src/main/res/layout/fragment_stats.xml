                        class="im.dacer.androidcharts.LineView"
                        android:id="@+id/line_view" />
                </HorizontalScrollView>

            </androidx.cardview.widget.CardView>-->

            <androidx.cardview.widget.CardView
                android:id="@+id/categoryChartView"
                android:layout_width="match_parent"
                app:cardUseCompatPadding="true"
                android:elevation="5dp"
                app:cardCornerRadius="5dp"
                android:layout_height="350dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="18dp"
                    android:paddingTop="5dp"
                    android:text="Category Breakup"
                    android:textSize="18sp" />
                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/chart1"
                    android:layout_marginTop="22dp"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|end"
                    android:layout_marginRight="18dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="bottom"
                    android:paddingTop="8dp"
                    android:textStyle="italic"
                    android:text="*Pie chart indicates category wise breakup"
                    android:textSize="10sp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/groupChartView"
                android:layout_width="match_parent"
                app:cardUseCompatPadding="true"
                android:elevation="5dp"
                app:cardCornerRadius="5dp"
                android:layout_height="350dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="18dp"
                    android:paddingTop="5dp"
                    android:text="Group Breakup"
                    android:textSize="18sp" />
                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/pieChartGroup"
                    android:layout_marginTop="22dp"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|end"
                    android:layout_marginRight="18dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="bottom"
                    android:paddingTop="8dp"
                    android:textStyle="italic"
                    android:text="*Pie chart indicates group wise breakup"
                    android:textSize="10sp" />
            </androidx.cardview.widget.CardView>

