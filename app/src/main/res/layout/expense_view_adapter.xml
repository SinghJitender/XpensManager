<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:elevation="5dp"
    android:layout_marginBottom="5dp"
    android:orientation="vertical">
    <LinearLayout
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingStart="10dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="20"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/splitamount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_weight="15"
            android:text="Amount"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:orientation="horizontal"
            android:layout_gravity="right|center"
            android:gravity="right"
            android:layout_weight="5">
            <TextView
                android:id="@+id/remainingamount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="right"
                android:textSize="13sp"
                android:layout_marginRight="10dp"
                android:text="-10000.00"/>

            <ImageView
                android:id="@+id/expenseSettled"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:src="@drawable/check"/>
        </LinearLayout>

    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="20"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/description"
                android:layout_width="0dp"
                android:layout_marginLeft="3dp"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:textSize="16sp"
                android:text="Title"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="20"
            android:orientation="horizontal">
            <ImageView
                android:padding="3dp"
                android:layout_width="20dp"
                android:src="@drawable/category_small"
                android:scaleType="fitCenter"
                android:textColor="@color/theme_text_color_on_white_bg"
                android:layout_height="20dp"/>
            <TextView
                android:id="@+id/category"
                android:text="Category"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="20"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="20"
            android:orientation="horizontal">
            <ImageView
            android:padding="3dp"
            android:layout_width="20dp"
            android:src="@drawable/card_small"
            android:scaleType="fitCenter"
            android:textColor="@color/theme_text_color_on_white_bg"
            android:layout_height="20dp"/>
            <TextView
                android:id="@+id/payment"
                android:text="Mode of payment"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="20"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="20"
            android:orientation="horizontal">
            <ImageView
                android:padding="3dp"
                android:id="@+id/warningIcon"
                android:layout_width="20dp"
                android:src="@drawable/group_small"
                android:scaleType="fitCenter"
                android:textColor="@color/theme_text_color_on_white_bg"
                android:layout_height="20dp"/>
            <TextView
                android:id="@+id/group"
                android:text="Group"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="20"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="20"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/amount"
                android:text="Original Amount"
                android:layout_marginLeft="3dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="16"/>
            <TextView
                android:id="@+id/date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:layout_gravity="bottom"
                android:gravity="end"
                android:textSize="10sp"
                android:layout_marginRight="10dp"
                android:text="12/20/2020"/>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>